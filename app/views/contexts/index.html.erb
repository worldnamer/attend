<div class="page-header"><h1><%=t '.title', :default => "Contexts" %></h1></div>

<% @contexts.each do |context| %>
  <div class = "row">
    <div class = "span12">
      <%= link_to edit_context_path(context) do %>
        <i class="icon-pencil"></i>
      <% end %>
      <%= link_to context_path(context), :method => :delete, :data => { :confirm => t('links.confirm') } do %>
        <i class="icon-remove"></i>
      <% end %>
      <%= context.name %>
    </div>
  </div>
<% end %>

<%= link_to new_context_path, style: "" do %>
  <i class="icon-plus" style="font-size: 30px; margin-top: 20px; margin-bottom: 20px;"></i>
<% end %>
