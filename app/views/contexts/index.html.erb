<div class="page-header"><h1>Contexts</h1></div>

<% @contexts.each do |context| %>
  <div class = "row">
    <div class = "span12">
      <%= link_to edit_context_path(context) do %>
        <i class="icon-pencil"></i>
      <% end %>
      <%= link_to context_path(context), :method => :delete, :data => { :confirm => t('links.confirm') } do %>
        <i class="icon-remove"></i>
      <% end %>
      <%= context.name %>
    </div>
  </div>
<% end %>

<%= link_to new_context_path, :class => "row" do %>
  <div class="span12" style="border: 1px dashed #ddd; color: #ddd;">
    <i class="icon-plus" style="font-size: 30px; margin-top: 10px; margin-bottom: 10px;"> add new context</i>
  </div>
<% end %>
